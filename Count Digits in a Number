#include <stdio.h>

int main() {
    int N;
    scanf("%d", &N);

    // If the number is 0, it has 1 digit
    if (N == 0) {
        printf("1\n");
        return 0;
    }

    // Handle negative numbers
    if (N < 0) {
        N = -N;
    }

    int count = 0;
    while (N != 0) {
        N = N / 10;
        count++;
    }

    printf("%d\n", count);

    return 0;
}
